<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textHeader" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="textButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="textInput" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="textTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="remainCash" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorConfirmation</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="currentFamily" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorFunction</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NavigationViewTextStyle">
        <item name="fontFamily">@font/roboto</item>
    </style>

</resources>