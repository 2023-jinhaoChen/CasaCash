<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="7.36dp"
            android:paddingRight="7.36dp"
            android:theme="@style/Theme.CasaCash">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.CasaCash">

                <ImageButton
                    android:id="@+id/ib_register_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="goToMainMenu"
                    android:background="#00000000"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:src="@drawable/logo_removebg_50"
                    android:theme="@style/Theme.CasaCash" />

                <TextView
                    android:id="@+id/tv_register_title"
                    style="@style/Theme.CasaCash"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/textHeaderRegister"
                    android:textAlignment="center"
                    android:textAppearance="@style/textHeader"
                    android:theme="@style/Theme.CasaCash"
                    app:autoSizeTextType="none" />

                <ImageButton
                    android:id="@+id/tb_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="goToSettings"
                    android:background="#00000000"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/icons8_menu_100___"
                    android:theme="@style/Theme.CasaCash" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                android:paddingLeft="34.34dp"
                android:paddingRight="34.34dp"
                android:theme="@style/Theme.CasaCash">

                <TextView
                    android:id="@+id/tv_register_user"
                    style="@style/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textUser"
                    android:theme="@style/Theme.CasaCash" />

                <EditText
                    android:id="@+id/et_register_user"
                    style="@style/textInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    android:theme="@style/Theme.CasaCash" />

                <TextView
                    android:id="@+id/tv_register_password"
                    style="@style/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textPassword"
                    android:theme="@style/Theme.CasaCash" />

                <EditText
                    android:id="@+id/et_register_password"
                    style="@style/textInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:text=""
                    android:theme="@style/Theme.CasaCash" />

                <TextView
                    android:id="@+id/tv_register_confirm"
                    style="@style/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textPasswordConfirm"
                    android:theme="@style/Theme.CasaCash" />

                <EditText
                    android:id="@+id/et_register_confirm"
                    style="@style/textInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:text=""
                    android:theme="@style/Theme.CasaCash" />

                <TextView
                    android:id="@+id/tv_register_email"
                    style="@style/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textEmail"
                    android:theme="@style/Theme.CasaCash" />

                <EditText
                    android:id="@+id/et_register_email"
                    style="@style/textInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    android:theme="@style/Theme.CasaCash" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="43.54dp"
                android:gravity="bottom|center"
                android:orientation="horizontal"
                android:textAlignment="center"
                android:theme="@style/Theme.CasaCash">

                <Button
                    android:id="@+id/bt_register"
                    style="@style/textButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textButtonRegister"
                    android:textAlignment="center"
                    android:theme="@style/Theme.CasaCash" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/navigation_view"/>
</androidx.drawerlayout.widget.DrawerLayout>
